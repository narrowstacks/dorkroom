{
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["development"],
    "paths": {
      "@dorkroom/api": ["packages/api/src/index.ts"],
      "@dorkroom/api/*": ["packages/api/src/*"],
      "@dorkroom/logic": ["packages/logic/src/index.ts"],
      "@dorkroom/logic/*": ["packages/logic/src/*"],
      "@dorkroom/ui": ["packages/ui/src/index.ts"],
      "@dorkroom/ui/*": ["packages/ui/src/*"]
    }
  }
}
