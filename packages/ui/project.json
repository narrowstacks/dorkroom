{
  "name": "@dorkroom/ui",
  "root": "packages/ui",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/ui",
        "command": "tsc --project tsconfig.lib.json"
      },
      "dependsOn": ["^build"],
      "cache": true,
      "inputs": [
        "production",
        "^production",
        {
          "externalDependencies": ["typescript"]
        }
      ],
      "outputs": ["{projectRoot}/dist"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["packages/ui/src/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "options": {
        "config": "packages/ui/vite.config.ts"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/ui",
        "command": "tsc --noEmit --project tsconfig.json"
      }
    }
  }
}
