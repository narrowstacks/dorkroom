{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Dorkroom App (Chrome)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}/apps/dorkroom/src",
            "sourceMaps": true,
            "userDataDir": "${workspaceFolder}/.vscode/chrome-debug-profile",
            "runtimeArgs": [
                "--disable-web-security",
                "--disable-features=VizDisplayCompositor"
            ],
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**",
                "**/dist/**"
            ],
            "preLaunchTask": "nx:dorkroom:dev"
        },
        {
            "name": "Debug Dorkroom App (Chrome) - Manual Start",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}/apps/dorkroom/src",
            "sourceMaps": true,
            "userDataDir": "${workspaceFolder}/.vscode/chrome-debug-profile",
            "runtimeArgs": [
                "--disable-web-security",
                "--disable-features=VizDisplayCompositor"
            ],
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**",
                "**/dist/**"
            ]
        },
        {
            "name": "Debug Dorkroom App (Edge)",
            "type": "msedge",
            "request": "launch",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}/apps/dorkroom/src",
            "sourceMaps": true,
            "userDataDir": "${workspaceFolder}/.vscode/edge-debug-profile",
            "runtimeArgs": [
                "--disable-web-security",
                "--disable-features=VizDisplayCompositor"
            ],
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**",
                "**/dist/**"
            ],
            "preLaunchTask": "nx:dorkroom:dev"
        },
        {
            "name": "Attach to Chrome",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "webRoot": "${workspaceFolder}/apps/dorkroom/src",
            "sourceMaps": true,
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**",
                "**/dist/**"
            ]
        }
    ]
}