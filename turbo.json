{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    ".env",
    "tsconfig.json",
    "tsconfig.base.json",
    "bun.lock"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "package.json", "tsconfig*.json"],
      "outputs": ["dist/**"]
    },
    "@dorkroom/dorkroom#build": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**",
        "index.html",
        "package.json",
        "vite.config.ts",
        "tsconfig*.json",
        "../../packages/logic/src/**",
        "../../packages/ui/src/**",
        "../../packages/api/src/**"
      ],
      "outputs": ["dist/**"],
      "env": [
        "SUPABASE_MASTER_API_KEY",
        "SUPABASE_ENDPOINT",
        "UNKEY_ROOT_KEY",
        "UNKEY_API_ID",
        "UNKEY_API_KEY_PERMISSION",
        "UNKEY_ANON_NAMESPACE"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["PORT"]
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "lint": {}
  }
}
